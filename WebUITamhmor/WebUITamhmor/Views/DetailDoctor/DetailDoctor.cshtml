@model IEnumerable<WebUITamhmor.Models.DoctorModel>
@{
    ViewData["Title"] = "DetailDoctor";
}
<style>
    img {
        border-radius: 8px;
    }

    table, th, td {
        border: 1px solid #ddd;
        border-collapse: collapse;
        border-radius: 5px;
    }

    th, td {
        padding: 15px;
        text-align: center;
    }

    th {
        background-color: #76b5df;
        color: white;
        font-family: 'Courier New', Courier, monospace;
        font-size: 23px;
    }

    td {
        color: black;
        font-family: 'K2D', sans-serif;
        font-size: 15px;
    }

    /*ul {
        list-style-type: none;
        margin: 1;
        padding: 30px;
        overflow: hidden;
        background-color: #A8DEE0;
    }*/

    li {
        font-size: 30px;
        float: left;
        font-family: 'K2D', sans-serif;
    }
</style>
<body>

    <div class="container mypanel" style="margin-top:20px;">

        @foreach (var item in Model)
        {
            <div class="col" style="margin-right: 300px; font-family: 'Prompt';">
                <div class="columns">
                    <div class="column" style="">
                        <img src="@Html.DisplayFor(modelItem => item.Dimage)" />
                    </div>
                    <div class="column" style="margin-left: 2rem;width:100%;">
                        <p class="row" style="font-size: 30px;">

                            @Html.DisplayFor(model => item.Dfname)
                            @Html.DisplayFor(model => item.Dlname)
                        </p>
                        <br />
                        <p class="row" style="font-size: 22px;">แผนก : @Html.DisplayFor(model => item.Ddepartment)</p>
                        
                            @if (item.Dsex == 0)
                            {
                                <p class="row" style="font-size: 22px;">เพศ : ชาย</p>
                            }
                            else
                            {
                                <p class="row" style="font-size: 22px;">เพศ : หญิง</p>
                            }
                        
                        <p class="row" style="font-size: 22px;">อายุ : @Html.DisplayFor(model => item.Dage)</p>
                        <p class="row" style="font-size: 22px;">เเพทย์ประจำโรงพยาบาล : @Html.DisplayFor(model => item.Dhospital)</p>
                        <p class="row" style="font-size: 22px;">ความชำนาญเฉพาะทาง : @Html.DisplayFor(model => item.Dexpertise)</p>
                        <p class="row" style="font-size: 22px;">ค่าปรึกษา : @Html.DisplayFor(model => item.Dprice) Bath</p>
                    </div>
                </div>
                
                
            </div>

            <div style="text-align: right;">
                <button type="button" class="btn btn-info" style="width: 100px; color: white; font-size: 16px;"> @Html.ActionLink("แชท", "Payment", "Payment", new { Dprice = item.Dprice }) </button>
            </div>
        }
    </div>

</body>






